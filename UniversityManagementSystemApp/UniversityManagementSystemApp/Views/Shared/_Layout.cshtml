<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Web Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 0;
        }

        .actionLinkStylePremier {
            display: inline-block;
            padding: 10px 10px;
            text-align: center;
            color: white;
            font-weight: bold;
        }

            .actionLinkStylePremier:hover {
                text-decoration: none;
                background: #ddd;
                color: black;
                -webkit-transition: .5s all ease;
                -moz-transition: .5s all ease;
                -ms-transition: .5s all ease;
                -o-transition: .5s all ease;
                transition: .5s all ease;
            }

        .actionLinkStyle {
            display: inline-block;
            text-align: center;
            color: black;
        }

            .actionLinkStyle:hover {
                text-decoration: none;
                background: #ddd;
                color: black;
                -webkit-transition: .5s all ease;
                -moz-transition: .5s all ease;
                -ms-transition: .5s all ease;
                -o-transition: .5s all ease;
                transition: .5s all ease;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        @Html.ActionLink("Premier University", "Index", "Login", null, new { @class = "actionLinkStylePremier" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExample04">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Department</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown04">

                        @Html.ActionLink("Create Department", "Create", "Department", null, new { @class = "actionLinkStyle" })
                        @Html.ActionLink("View Department", "Index", "Department", null, new { @class = "actionLinkStyle" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Course</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown04">

                        @Html.ActionLink("Create Course", "Create", "Course", null, new { @class = "actionLinkStyle" })
                        <br />
                        <hr />
                        @Html.ActionLink("View Courses Information", "Index", "Course", null, new { @class = "actionLinkStyle" })

                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Teacher</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown04">

                        @Html.ActionLink("Create Teacher", "Create", "Teacher", null, new { @class = "actionLinkStyle" })
                        <br />
                        @Html.ActionLink("View Teachers Information", "Index", "Teacher", null, new { @class = "actionLinkStyle" })
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Course Assign To</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown04">

                        @Html.ActionLink("Course Assigning", "Create", "CourseAssignTo", null, new { @class = "actionLinkStyle" })
                        <br />
                        <hr />
                        @Html.ActionLink("Course Assigning With Checkbox", "Assigning", "CourseAssignTo", null, new { @class = "actionLinkStyle" })
                        <br />
                        <hr />
                        @Html.ActionLink("View Assigned Information", "Index", "CourseAssignTo", null, new { @class = "actionLinkStyle" })
                        <br />
                        <hr />
                        @Html.ActionLink("View Statistics", "CourseStatistics", "CourseAssignTo", null, new { @class = "actionLinkStyle" })
                    </div>
                </li>


                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Student</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown04">
                        @Html.ActionLink("Create Student", "Create", "Student", null, new {@class = "actionLinkStyle"})
                        <br/>
                        <hr/>
                        @Html.ActionLink("Enrollment", "EnrollAStudent", "Enrollment", null, new {@class = "actionLinkStyle"})
                        <br/>
                        <hr/>
                        @Html.ActionLink("View Enroll Statistics", "EnrollStatistics", "Enrollment", null, new {@class = "actionLinkStyle"})
                        <br/>
                        <hr/>
                        @Html.ActionLink("Save Result", "Create", "Results", null, new {@class = "actionLinkStyle"})
                        <br/>
                        <hr/>
                        @Html.ActionLink("View Result", "ViewResult", "Results", null, new {@class = "actionLinkStyle"})
                    </div>
                </li>


                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Class Room Allocation</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown04">

                        @Html.ActionLink("Class Room Allocation", "Create", "ClassRoomAllocation", null, new { @class = "actionLinkStyle" })
                        <br />
                        
                    </div>
                </li>
            </ul>


        </div>

    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; All Right Preserved @DateTime.Now.Year Premier University, Chottogram.</p>
                    </footer>
                </div>
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @Scripts.Render("~/Content/CustomStyle.css")
                @RenderSection("scripts", required: false)

            </div>
        </div>
    </div>

</body>
</html>
